{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowJs": true
  },
  "include": ["src", "drizzle.config.ts", "jest.config.cjs"],
  "exclude": ["node_modules", "dist"]
}
